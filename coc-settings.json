{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  // make vim select first item on completion
  "suggest.noselect": false,
  "snippets.ultisnips.directories":[
    "UltiSnips",
    "/data/Projets/vim-snippets/UltiSnips"
  ],
  "yaml.schemas": {
      "kubernetes": "/*.yaml",
      "http://json.schemastore.org/ansible-stable-2.9": "/*.[yaml|yml]"
  }
}
